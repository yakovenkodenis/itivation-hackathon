<div class="container" style="padding-top: 7%;">
    <h2><%= t('home.teams.header') %></h2>
        <p class="lead"><%= t('home.teams.list') %></p>
        <hr><br>
        <div class="agenda">
            <div class="table-responsive">
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th class='small-th'><%= t('home.teams.table.team') %></th>
                            <th class='small-th'><%= t('home.teams.table.project') %></th>
                            <th class='small-th'><%= t('home.teams.table.link') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @teams.each do |t| %>
                            <tr class='smaller-td'>
                                <td class="agenda-time">
                                    <%= t.name %>
                                </td>
                                <td class="agenda-events">
                                    <button data-toggle='modal' data-target="#project-modal-<%= t.projects.first.id %>">
                                        <h1><%= t.projects.first.name %></h1>
                                    </button>
                                </td>





    <!-- line modal -->
    <div class="modal fade" id="#project-modal-<%= t.projects.first.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel<%= t.projects.first.id %>" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="lineModalLabel<%= t.projects.first.id %>">
                    <%= t.projects.first.name %>
                </h3>
            </div>
            <div class="modal-body">

                <!-- content goes here -->
                <%= markdown(t.projects.first.description) %>
            </div>
            <div class="modal-footer">
                <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default" data-dismiss="modal"  role="button"><%= t('home.teams.modal.close') %></button>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>






