<div class="container contact-form-container" style='padding-top: 10%;'>
    <h3 class="text-center"><%= t('contact.call_to_action') %></h3>
    <div class="row">
        <%= simple_form_for @contact, html: { class: 'contact-form', id: 'contact-form' } do |f| %>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.input :name, required: true, label: false, input_html: { class: 'form-control', id: 'Name' }, placeholder: t('contact.placeholders.name') %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.input :email, required: true, label: false, input_html: { class: 'form-control', id: 'email' }, placeholder: t('contact.placeholders.email')  %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <%= f.input :message, as: :text, required: true, label: false, input_html: { rows: '3', class: 'form-control textarea', id: 'Message', name: 'Message' }, placeholder: t('contact.placeholders.message')  %>
                    </div>
                </div>
            </div>
            <div class="hidden">
                <%= f.input :nickname, hint: 'Leave this field blank!' %>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <%= f.button :submit, t('contact.action') , class: 'btn main-btn pull-right' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
